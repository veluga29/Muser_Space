 <div class="row first_row row_style">
     <div class="row-header">
        <h1 class="page-header header_style">
            커버
        </h1>
     </div>
   
    <div class="row list">
      <% @cover.each do |s| %>
        <div class="col-6 col-md-4 col-lg-3">
          <div class="list-wrap show-list-wrap">
              <div class="thumbnail">
                  <div class="list-show">
                    <ul class="list-unstyled video-list-thumbs row">
                    	<li class="col-12">
                    		<a href="<%=cover_path(s.id)%>" title="Claudio Bravo, antes su debut con el Barça en la Liga">
                    		<% unless s.cover_pic.nil? %>
                    			<img src="<%= s.cover_pic %>" alt="Barca" class="img-responsive video-img" width="280" height="160" />
                    		<% else %>
                    			<img src="http://via.placeholder.com/280x160" alt="Barca" class="img-responsive video-img" width="280" height="160" />
                    		<% end %>
                    			<span class="glyphicon glyphicon-play"></span>
                    			<span class="duration">03:15</span>
                    		</a>
                    	</li>
                    </ul>
                  </div>
                
                <div class="caption">
                  <ul>
                    <!--<li><a href="" class="glyphicon glyphicon-play"></a></li>-->
                    <!--<li><a href="" class="glyphicon glyphicon-plus"></a></li>-->
                    <li><%= link_to '', cover_path(s.id), class: "glyphicon glyphicon-list-alt" %></li>
                    <!--<li><a href="/category/songwriting_info" class="glyphicon glyphicon-list-alt"></a></li>-->
                    <li>
                      <% if current_user.like2?(s) %>
                        <a href="/like2_cancel/<%= s.id %>" class="glyphicon glyphicon-heart category-like"></a>
                      <% else %>
                        <a href="/like2/<%= s.id %>" class="glyphicon glyphicon-heart"></a>
                      <% end %>
                    </li>
                  </ul>
                  <p><a href="<%=cover_path(s.id)%>" class="list-title"><%= s.title %><!--제목--></a></p>
                  <p><a href="#" class="list-singer"><%= s.user_name %><!--가수--></a></p>
                  <p class="list-day"><%= s.updated_at %>
                  <!--<%= "#{s.unique_impression_count}" %>-->
                  </p>
                  <% if current_user.id == s.user_id %>
                    <p>
                      <%= link_to '수정하기', edit_cover_path(s.id) %>
                      <%= link_to '삭제하기', cover_path(s.id), method: "delete", data: {confirm: "정말 삭제하시겠습니까?"} %>
                    </p>
                  <% else %>
                  <% end %>
                </div>
              </div> 
            </div>
            
          </div>
          
        <!--</div>-->
      <% end %>
   </div>
</div>
